@inherits Umbraco.Web.Mvc.UmbracoViewPage<Examensarbete.Models.ViewModels.BlogPostViewModel>

<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Skriv blogginlägg
</button>

<div class="modal fade" id="myModal">
    @using (Html.BeginUmbracoForm("Post", "BlogPostSurface", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.ValidationSummary()
        </div>


        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Skriv ett blogginlägg</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Headline)
                        @Html.TextBoxFor(m => m.Headline, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <span class="input-group-addon">  @Html.LabelFor(m => m.Subject)</span>
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="file" name="imageFile" id="imageFile" />
                    </div>
                </div>
                <div class="modal-footer">

                    <input type="submit" class="btn btn-primary" value="Spara" />
                </div>
            </div>
        </div>

    }
</div>

